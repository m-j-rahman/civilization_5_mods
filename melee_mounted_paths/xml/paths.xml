<?xml version="1.0" encoding="utf-8"?>

<GameData>

<!-- Warrior, Barbarian Brute, Aztec Jaguar, and Polynesian Maori Warrior upgrade into Spearman instead of Swordsman. They all become obsolete at Civil Service instead of Metal Casting. -->

	<Unit_ClassUpgrades>
		<Update>
			<Where UnitType="UNIT_WARRIOR"/>
			<Set UnitClassType="UNITCLASS_SPEARMAN"/>
		</Update>
		<Update>
			<Where UnitType="UNIT_BARBARIAN_WARRIOR"/>
			<Set UnitClassType="UNITCLASS_SPEARMAN"/>
		</Update>
		<Update>
			<Where UnitType="UNIT_AZTEC_JAGUAR"/>
			<Set UnitClassType="UNITCLASS_SPEARMAN"/>
		</Update>
		<Update>
			<Where UnitType="UNIT_POLYNESIAN_MAORI_WARRIOR"/>
			<Set UnitClassType="UNITCLASS_SPEARMAN"/>
		</Update>
	</Unit_ClassUpgrades>

	<Units>
		<Update>
			<Where Type="UNIT_WARRIOR"/>
			<Set>
				<ObsoleteTech>TECH_CIVIL_SERVICE</ObsoleteTech>
			</Set>
		</Update>
		<Update>
			<Where Type="UNIT_AZTEC_JAGUAR"/>
			<Set>
				<ObsoleteTech>TECH_CIVIL_SERVICE</ObsoleteTech>
			</Set>
		</Update>
		<Update>
			<Where Type="UNIT_POLYNESIAN_MAORI_WARRIOR"/>
			<Set>
				<ObsoleteTech>TECH_CIVIL_SERVICE</ObsoleteTech>
			</Set>
		</Update>
	</Units>

